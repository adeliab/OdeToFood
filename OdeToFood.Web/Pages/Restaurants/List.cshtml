@page
@model OdeToFood.Web.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Location</th>
			<th>Cuisine</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var restaurant in Model.Restaurants)
		{
			<tr>
				<td>@restaurant.Name</td>
				<td>@restaurant.Location</td>
				<td>@restaurant.Cuisine</td>
			</tr>
		}
	</tbody>
</table>

<div>@Model.Message</div>

